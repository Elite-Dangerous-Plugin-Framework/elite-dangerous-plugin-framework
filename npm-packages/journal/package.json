{
    "name": "@elite-dangerous-plugin-framework/journal",
    "version": "0.20250914",
    "description": "Autogenerated Journal Event definitions as TypeScript Types",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run clean && npm run build:js && npm run build:types",
        "build:js": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=node18 --format=esm --outfile=dist/index.js",
        "build:types": "tsc --emitDeclarationOnly --outDir dist",
        "clean": "rm -rf dist"
    },
    "devDependencies": {
        "@apidevtools/json-schema-ref-parser": "^14.2.1",
        "@types/json-schema-merge-allof": "^0.6.5",
        "@types/node": "^24.4.0",
        "esbuild": "^0.24.0",
        "json-schema-merge-allof": "^0.8.1",
        "typescript": "^5.5.0",
        "vitest": "^2.0.0"
    },
    "dependencies": {
        "glob": "^11.0.3",
        "json-schema-to-typescript": "^15.0.4"
    }
}