{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "elite-dangerous-plugin-framework",
  "version": "0.1.0",
  "identifier": "elite-dangerous-plugin-framework.app",
  "build": {
    "beforeDevCommand": "bun run build:plugins && bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build && bun run build:plugins",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Elite Dangerous Plugin Framework",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "./assets/plugins/*/frontend/*",
      "./assets/plugins/*/manifest.json"
    ]
  }
}